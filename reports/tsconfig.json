{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "data/*.json",
    "output/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "extends": "../tsconfig.json",
    "transpileOnly": true,
    "compilerOptions": {}
  }
}
