{
  "extends": [
    "ipfs"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "sort-imports": ["error"]
  },
  "overrides": [
    {
      "files": [
        "test/**/*.ts"
      ],
      "parserOptions": {
        "project": "test/tsconfig.json"
      },
      "env": {
        "mocha": true
      }
    }
  ]
}
