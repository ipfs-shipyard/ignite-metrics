{
  "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["node", "mocha"],
    "outDir": "dist",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "typeRoots": ["types"]
  },
  "rootDir": "src",
  "include": ["src", "types"],
  "exclude": ["node_modules", "reports"],
  "ts-node": {
    "extends": "aegir/src/config/tsconfig.aegir.json",
    "transpileOnly": true,
    "compilerOptions": {}
  }
}
