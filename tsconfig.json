{
  "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["node", "mocha"],
    "outDir": "dist",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "module": "es2022",
    "typeRoots": [
      "src/types"
    ],
  },
  "include": [
    "src",
    "test",
    "src/**/*.css"
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "extends": "aegir/src/config/tsconfig.aegir.json",
      "transpileOnly": true,
      "compilerOptions": {
      }
  }
}
